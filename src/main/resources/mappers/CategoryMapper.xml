<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xyz.home.dao.CategoryDao" >
  <resultMap id="BaseResultMap" type="com.xyz.home.model.Category" >
    <id column="ca_id" property="caId" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="p_id" property="pId" jdbcType="INTEGER" />
  </resultMap>
  
  <resultMap id="resultMap" type="map" >
    <id column="ca_id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="p_id" property="_parentId" jdbcType="INTEGER" />
    <result column="type" property="type" jdbcType="INTEGER" />
  </resultMap>
  
  <select id="selectCategory" resultMap="resultMap" parameterType="com.xyz.home.model.Category">
    select * from category
    <where>
    <if test="caId!=null and caId!=''">
    ca_id=#{caId}
    </if>
    <if test="name!=null and name!=''">
    and name=#{name}
    </if>
    <if test="type!=null">
    and type=#{type}
    </if>
    </where>
  </select>
  
  <select id="selectCategoryCount" resultType="java.lang.Integer" >
    select count(*) from category
  </select>
  
  <delete id="delCategory"  parameterType="map" >
    delete from category
    where ca_id in
	<foreach item="item" index="index" collection="ids"
      open="(" separator="," close=")">
        #{item}
  	</foreach>
  </delete>
  
  <update id="modPId" parameterType="map">
  update category set p_id=0 
    where p_id in
	<foreach item="item" index="index" collection="ids"
      open="(" separator="," close=")">
        #{item}
  	</foreach>
  </update>
  
  <insert id="addCategory" parameterType="com.xyz.home.model.Category" >
    insert into category
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="caId != null" >
        ca_id,
      </if>
      <if test="name != null" >
        name,
      </if>
      <if test="pId != null" >
        p_id,
      </if>
      <if test="type != null" >
        type,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="caId != null" >
        #{caId,jdbcType=INTEGER},
      </if>
      <if test="name != null" >
        #{name,jdbcType=VARCHAR},
      </if>
      <if test="pId != null" >
        #{pId,jdbcType=INTEGER},
      </if>
      <if test="type != null" >
        #{type,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
 
  <update id="modCategory" parameterType="com.xyz.home.model.Category" >
    update category
    <set >
      <if test="name != null" >
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="pId != null" >
        p_id = #{pId,jdbcType=INTEGER},
      </if>
    </set>
    where ca_id = #{caId,jdbcType=INTEGER}
  </update>
  
</mapper>